@model FinalProject.Models.HomeViewModel

<html>

    <head>
        <link href="~/Styles/Home.css" rel="stylesheet" />
        <title>Final Project</title>
    </head>

    <body>
        <script src="~/Scripts/jquery-2.1.1.min.js"></script>
        <script src="~/Scripts/jquery-ui.min.js"></script>
        <script src="~/Scripts/Home.js"></script>
        
        <div class="home">

            <div class="title">Welcome to Cuyahoga Community College Student Services Online</div>

            <div class="paragraph">Cuyahoga Community College recognizes students' rights to access personal and academic records
            in accordance with the Family Educational Rights and Rivacy Act of 1974(FERPA) as amended by Public Law 93-586.</div>

            <div class="logIn">

                <div class="row">
                    <div class="desc">Already have an account with us? Retuning users may log in by 
                    entering their site username and password.</div>
                    <div class="enterInfo">
                        <div class="enterInfoBox">Username<input type="text"/></div>
                        <div class="enterInfoBox">Password<input type="text" /></div>
                        <div class="button">Log In</div>
                    </div>

                </div>

                <div class="row">
                    <div class="desc">New ussers, please create a new account by providing us with some basic information.</div>
                    <div class="enterInfo">
                    <div class="enterInfoBox">Username<input type="text" /></div>
                    <div class="enterInfoBox">Password<input type="text" /></div>
                    <div class="enterInfoBox">E-Mail Address<input type="text" /></div>
                    <div class="enterInfoBox">Repeat E-Mail Address<input type="text" /></div>
                    <div class="button">Create Account</div>
                </div>
                </div>
            </div>

            <div class="footer">Cuyahoga Community College 700 Carnegie Avenue, Cleveland, OH 44115</div>

        </div>

    </body>

</html>